{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "useWorkspaces": true,
  "version": "independent",
  "npmClient": "yarn",
  "command": {
    "publish": {
      "ignoreChanges": [
        "packages/*",
        "components"
      ],
      "registry": ""
    },
    "version": {
      "message": "chore(release): publish"
    },
    "bootstrap": {
      "ignore": "",
      "npmClientArgs": [
        "--no-package-lock"
      ]
    }
  },
  "packages": [
    "packages/*",
    "components/packages"
  ]
}
